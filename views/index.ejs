<%- include('partials/header') %>

<% blogs.forEach(function(blog) { %>
    <div>
        <h2><%= blog.title %></h2>
        <img src="<%= blog.image %>">
        <span><%= blog.created %></span>
        <div class="description">
	        <p><%= blog.body.substring(0,100) %> ...</p>
        </div>
        <a href="/blogs/<%=blog._id %>">
            Read More
        </a>
    </div>
<% }) %>

<%- include('partials/footer') %>